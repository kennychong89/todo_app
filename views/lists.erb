<ul id="lists">
  <% @lists.each_with_index do |list, id| %>
    <li>
      <a href="/lists/<%= id %>">
        <h2><%= list[:name] %></h2> 
        <p><%= list[:todos].size %></p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class="add" href="/lists/new">New List</a>
<% end %>